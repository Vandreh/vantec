
<div class="row">
  <h1>Products</h1>
  <div class="pull-right range-query">
    <%= form_tag products_path, method: :get do %>
      <%= text_field_tag 'search[date_from]', @search.date_from %>
      <%= text_field_tag 'search[date_to]', @search.date_to %>
      <%= submit_tag 'Search', class: 'btn search-button' %>
    <% end %>
  </div>
</div>

<div class="media">
  <div class="media-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Product name</th>
          <th>Type product</th>
          <th>Product price</th>
          <th>Code</th>
          <th>Points</th>
          <th>Status</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.product_name %></td>
            <td><%= product.type_product %></td>
            <td><%= product.product_price %></td>
            <td><%= product.code %></td>
            <td><%= product.points %></td>
            <td><%= product.status %></td>
            <td><%= link_to 'Show', product, class: 'btn btn-default' %></td>
            <td><%= link_to 'Edit', edit_product_path(product), class: 'btn btn-success' %></td>
            <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>

<%= link_to 'New Product', new_product_path, class: 'form-control' %>
